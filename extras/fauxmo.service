[Unit]
Description=Fauxmo
After=network.target
Wants=network.target

[Service]
Type=simple
WorkingDirectory=/abs/path/to/dir/fauxmo
# Fix the paths below:
ExecStart=/abs/path/to/.venv/bin/fauxmo -c /abs/path/to/fauxmo/config.json -v
Restart=on-failure
StartLimitBurst=0
User=fauxmo

[Install]
WantedBy=multi-user.target
